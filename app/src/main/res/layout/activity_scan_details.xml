<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    tools:context="com.equipscan.activity.ScanDetails">

    <TextView android:text="工具编号" android:layout_width="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:id="@+id/textView4" />
    <TextView android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:gravity="right"
        android:padding="12dp"
        android:id="@+id/tvID"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"  />



    <TextView
        android:text="工具名稱"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="#FFFFFF"
        android:layout_marginTop="0.5dp"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5" />
    <TextView
        android:id="@+id/tvName"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:gravity="right"
        android:padding="12dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"  />

    <TextView
        android:text="扫描类型"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:background="#FFFFFF"
        android:layout_marginTop="0.5dp"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/tvID"
        android:layout_toStartOf="@+id/tvID" />
    <TextView
        android:id="@+id/tvType"
        android:textSize="18dp"
        android:textAlignment="gravity"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="12dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"  />


    <Spinner
        android:spinnerMode="dialog"
        android:textSize="18dp"
        android:layout_marginTop="42dp"
        android:id="@+id/spinner2"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:layout_below="@+id/tvType"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:text="仓管员"
        android:textSize="18dp"
        android:id="@+id/tvComment"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/spinner2"
        android:layout_toLeftOf="@+id/spinner2"
        android:layout_toStartOf="@+id/spinner2" />


    <TextView
        android:text="备注"
        android:textSize="18dp"
        android:id="@+id/textView7"
        android:background="#FFFFFF"
        android:layout_marginTop="42dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/tvComment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:hint="点击这里输入"
        android:id="@+id/txtComment"
        android:textAlignment="gravity"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="18dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"  />


</RelativeLayout>
